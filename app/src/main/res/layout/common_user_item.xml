<?xml version="1.0" encoding="utf-8"?>
<com.lostad.app.demo.swipeitemlayout.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_itemType="main"
        >
    <ImageView
        android:id="@+id/img_friend_avatar"
        style="@style/LCIMAvatar.Small"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_friend_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/img_friend_avatar"
        android:singleLine="true"
        android:text="name"
        android:textSize="20sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/tv_delete"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:gravity="center"
            android:text="删 除"
            android:textColor="#DDFFFFFF"
            app:layout_itemType="menu"
            />
 </com.lostad.app.demo.swipeitemlayout.SwipeItemLayout>